+/* --- Chat edit banner (WhatsApp/Viber style) --- */
+.chat-edit-banner {
+  display: flex;
+  align-items: flex-start;
+  gap: 12px;
+  padding: 10px 12px;
+  margin-bottom: 8px;
+  border-radius: 14px;
+  background: var(--chat-menu-bg);
+  border: 1px solid var(--chat-menu-border);
+  color: var(--chat-menu-fg);
+  position: relative;
+  overflow: hidden;
+  box-shadow: 0 8px 22px rgba(0, 0, 0, 0.12);
+}
+
+:root[data-theme="light"] .chat-edit-banner {
+  box-shadow: 0 10px 28px rgba(15, 23, 42, 0.08);
+}
+
+.chat-edit-banner::before {
+  content: "";
+  position: absolute;
+  inset: 0;
+  width: 4px;
+  background: var(--chat-bubble-self-accent);
+  border-radius: 12px 0 0 12px;
+}
+
+.chat-edit-banner__body {
+  display: flex;
+  flex-direction: column;
+  gap: 4px;
+  flex: 1;
+  min-width: 0;
+}
+
+.chat-edit-banner__label {
+  display: inline-flex;
+  align-items: center;
+  gap: 6px;
+  font-weight: 700;
+  font-size: 12px;
+  letter-spacing: 0.04em;
+  text-transform: uppercase;
+  color: var(--chat-bubble-self-accent);
+}
+
+.chat-edit-banner__label svg {
+  font-size: 13px;
+}
+
+.chat-edit-banner__text {
+  color: var(--chat-menu-fg);
+  opacity: 0.9;
+  font-size: 14px;
+  line-height: 1.35;
+  word-break: break-word;
+  display: -webkit-box;
+  -webkit-line-clamp: 2;
+  -webkit-box-orient: vertical;
+  overflow: hidden;
+}
+
+.chat-edit-banner__cancel {
+  background: transparent;
+  border: none;
+  color: var(--chat-menu-fg);
+  opacity: 0.8;
+  cursor: pointer;
+  display: inline-flex;
+  align-items: center;
+  justify-content: center;
+  width: 32px;
+  height: 32px;
+  border-radius: 50%;
+  transition: background 120ms ease, opacity 120ms ease;
+}
+
+.chat-edit-banner__cancel:hover {
+  background: var(--chat-menu-active-bg);
+  opacity: 1;
+}
+
+.msg-container--editing {
+  scroll-margin: 96px;
+}
+
+.msg-bubble--editing {
+  box-shadow: 0 0 0 2px var(--chat-bubble-self-accent),
+    0 8px 22px rgba(0, 0, 0, 0.18);
+  border-color: var(--chat-bubble-self-accent) !important;
+  transform: translateY(-1px);
+}
+
+:root[data-theme="light"] .msg-bubble--editing {
+  box-shadow: 0 0 0 2px var(--chat-bubble-self-accent),
+    0 12px 26px rgba(15, 23, 42, 0.12);
+}
 
