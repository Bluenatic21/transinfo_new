server {
    listen 80;
    server_name api.transinfo.ge;
    limit_req_status 429;

    client_max_body_size 200m;

    include /etc/nginx/snippets/api_proxy.conf;

    # мягкий лимит для отправки кода (6 запросов в минуту, burst 3)
    location = /phone/send-code {
        limit_req zone=sms burst=3 nodelay;
        proxy_pass http://127.0.0.1:8000/phone/send-code;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_read_timeout 600s;
        proxy_send_timeout 600s;
    }

    # всё остальное — в бэкенд
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_read_timeout 600s;
        proxy_send_timeout 600s;
    }

    # health
    location = /__health { return 200 "ok\n"; add_header Content-Type text/plain; }
}

server {
    listen 443 ssl http2;
    server_name api.transinfo.ge;

    ssl_certificate     /etc/letsencrypt/live/api.transinfo.ge/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.transinfo.ge/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    client_max_body_size 200m;
    include /etc/nginx/conf.d/security_headers.conf;

    # мягкий лимит на отправку смс
    location = /phone/send-code {
        limit_req zone=sms burst=3 nodelay;
        proxy_pass http://127.0.0.1:8000/phone/send-code;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_read_timeout 600s;
        proxy_send_timeout 600s;
    }

    # всё остальное в FastAPI
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_read_timeout 600s;
        proxy_send_timeout 600s;
    }

    # health
    location = /__health { return 200 "ok\n"; add_header Content-Type text/plain; }
}
